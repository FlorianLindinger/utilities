  // "basedpyright.analysis.autoImportCompletions": false, //auto add imports
  // "basedpyright.analysis.useLibraryCodeForTypes": true, //reduce strictness for 3rd-party libs
  // "basedpyright.analysis.extraPaths": [
  //   "~\\Documents\\Repositories\\python_code_repository"
  // ],
