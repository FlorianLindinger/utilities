{
  // general 
  "breadcrumbs.enabled": true,
  "files.autoSave": "afterDelay",
  "window.newWindowProfile": "Default",
  "workbench.list.mouseWheelScrollSensitivity": 4,
  "security.workspace.trust.untrustedFiles": "open",
  "typescript.tsserver.watchOptions": "vscode",
  // terminal
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt", 
  // explorer
  "explorer.excludeGitIgnore": false,
  "explorer.confirmDelete": false,
  "files.exclude": { // not visible in explorer:
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/.gitattributes": true,
    "**/LICENSE": true,
    "**/*.lnk": true,
    "**/*.lprof": true,
  },
  // default formatters
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "notebook.defaultFormatter": "charliermarsh.ruff",
  // AI
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "python": true
  },
  // settings sync
  "settingsSync.ignoredExtensions": [],
  "settingsSync.ignoredSettings": [],
  // git & diff
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 180, //seconds
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.postCommitCommand": "push",
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.maxComputationTime": 0,
  // editor  
  "editor.suggest.showStatusBar": true,
  "editor.mouseWheelZoom": true,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.hover.delay": 800,
  "editor.mouseWheelScrollSensitivity": 3,
  // notebooks
  "notebook.compactView": true,
  "notebook.lineNumbers": "on",
  "notebook.stickyScroll.enabled": true,
  "notebook.cellExecutionTimeVerbosity": "verbose",
  "notebook.cellFocusIndicator": "border",
  "notebook.dragAndDropEnabled": true,
  "notebook.diff.overviewRuler": true,
  "notebook.globalToolbarShowLabel": "dynamic",
  "notebook.insertToolbarLocation": "hidden",
  "notebook.output.scrolling": true,
  "notebook.output.wordWrap": true,
  "notebook.showCellStatusBar": "visible",
  "notebook.variablesView": true,
  "jupyter.askForKernelRestart": false,
  "[jupyter]": {
    "editor.mouseWheelScrollSensitivity": 3.5
  },
  "notebook.cellToolbarLocation": {
    "default": "hidden"
  },
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true
  },
  // python (some settings in other groups)
  "python.defaultInterpreterPath": "${env:USERPROFILE}\\Documents\\python_envs\\default_env\\Scripts\\python.exe",
  "python.venvFolders": [
    "Documents\\python_envs"
  ],
  "python.analysis.generateWithTypeAnnotation": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.experiments.optOutFrom": [
    "All"
  ],
  // Ruff formatter/linter settings (python)
  "ruff.nativeServer": "on",
  "ruff.configuration": "${env:USERPROFILE}\\Documents\\Repositories\\utilities\\good_Ruff_settings.toml",
  "ruff.configurationPreference": "filesystemFirst", //"filesystemFirst" "editorFirst"
  "ruff.lint.enable": true,
  "ruff.lint.preview": false,
  "ruff.logLevel": "info",
  "editor.codeActionsOnSave": {
    "source.organizeImports.ruff": "explicit"
  },
  // pylance settings (python - live static type checker, autocomplete, symbol naviation, hover documentation, real-time problems)
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.venv/**": true
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "python.languageServer": "Pylance",
  "python.analysis.userFileIndexingLimit": -1, //2000
  "python.analysis.diagnosticMode": "openFilesOnly", //"openFilesOnly","workspace" 
  "python.analysis.logLevel": "Trace",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.typeCheckingMode": "basic", // Type checking
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true, //autocomplete
  "python.analysis.importFormat": "absolute", //prefer absolute import paths
  "python.analysis.useLibraryCodeForTypes": true, //reduce strictness for 3rd-party libs
  "python.analysis.exclude": [
    "**/.venv/**",
    "**/build/**",
    "**/dist/**",
    "**/__pycache__/**",
    "**/.git/**"
  ],
  "python.analysis.extraPaths": [
    "${env:USERPROFILE}\\Documents\\Repositories\\python_code_repository"
  ],
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1", // new settings:
  

}